<% include ../partials/header %>

<div class="newContainer">
    <h1>Edit <%= campground.name %></h1>
    
    <form action="/campgrounds/<%= campground._id %>/?_method=PUT" method="POST">
        <input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>">
        <input class="form-control" type="number" name="campground[price]" value="<%= campground.price %>" min="0.00" step="1.00">
        <input class="form-control" type="text" name="campground[image]" value="<%= campground.image %>">
        <input class="form-control" type="text" name="campground[desc]" value="<%= campground.description %>">
        <button class="btn btn-lg btn-default" id="new">Submit</button>
    </form>
</div>
<% include ../partials/footer %>